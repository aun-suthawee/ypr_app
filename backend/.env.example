# YPR Backend Environment Variables

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=ypr_db
DB_USER=root
DB_PASSWORD=

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=5000
NODE_ENV=development

# CORS Configuration
# You can set either FRONTEND_URL (single) or FRONTEND_URLS (comma-separated)
FRONTEND_URL=http://localhost:3000
# FRONTEND_URLS=http://localhost:3000,https://ypr.yalapeo.go.th

# Optional: public base URL for logs
# PUBLIC_BASE_URL=http://localhost:5000
